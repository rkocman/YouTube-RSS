{layout '../@layout.latte'}
{import 'parts/contentBlock.latte'}

{block headerContent}
    <a href="{YouTubeRSS\Utils\Links::generate('admin')}">Admin</a>
{/block}

{block content}
    {if YouTubeRSS\Utils\Sessions::$user->isLogged() === false}

        {var $title = 'Log In'}
        {capture $content}
            <a href="{YouTubeRSS\Utils\Links::generate('login')}">Log in</a><br>
            <a href="{YouTubeRSS\Utils\Links::generate('rss')}">RSS feed</a><br>
        {/capture}
        {include contentBlock, title => $title, content => $content, maxWidth => 250}

        {var $title = 'Sign Up'}
        {capture $content}
            <a href="{YouTubeRSS\Utils\Links::generate('signup')}">Start</a><br>
        {/capture}
        {include contentBlock, title => $title, content => $content, maxWidth => 250}

    {else}

        {capture $title}
            User: {YouTubeRSS\Utils\Sessions::$user->username}
        {/capture}
        {capture $content}
            {if YouTubeRSS\Utils\Sessions::$user->isConnected() === false}
                <a href="{YouTubeRSS\Utils\Links::generate('connect')}">Connect with YouTube</a><br>
            {else}
                <a href="{YouTubeRSS\Utils\Links::generate('rss')}">RSS feed</a><br>
            {/if}
            <hr>
            <a href="{YouTubeRSS\Utils\Links::generate('logout')}">Log out</a><br>
        {/capture}
        {include contentBlock, title => $title, content => $content, maxWidth => 250}

    {/if}
{/block}
